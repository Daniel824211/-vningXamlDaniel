<Window x:Class="GridExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GridExample" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        
        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Knapp 1" Margin="5"/>
            <TextBox Text="Textbox 1" Margin="5"/>
            <CheckBox Content="Checkbox 1" Margin="5"/>
        </StackPanel>

        
        <WrapPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Knapp 2" Margin="5"/>
            <TextBox Text="Textbox 2" Margin="5"/>
            <CheckBox Content="Checkbox 2" Margin="5"/>
            <Button Content="Knapp 3" Margin="5"/>
            <TextBox Text="Textbox 3" Margin="5"/>
            <CheckBox Content="Checkbox 3" Margin="5"/>
        </WrapPanel>
    </Grid>
</Window>

